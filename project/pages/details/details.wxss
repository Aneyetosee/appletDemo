/* pages/details/details.wxss */
#swiper{
  width: 100%;
  height: 220px;
}
#btn{
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}
#btn>button{
  width: 50%;
  background-color: red;
  color: white;
  border-radius: 0px;
}
#btn>button:nth-of-type(1){
  background-color: rgb(248, 90, 90);
}
#goodsInfo{
  width: 96%;
  margin: 10px auto;
}
#goodsInfo>view{
  margin: 10px auto
}
#goodsInfo>view:nth-of-type(1)>text{
  font-weight: 600;
}
#goodsInfo>view:nth-of-type(2)>text{
  font-size: 12px;
  color: rgba(0, 0, 0, 0.7)
}
#goodsInfo>view:nth-of-type(3)>text{
  color:red
}
#goodsInfo>view:nth-of-type(4)>text{
  font-size: 14px;
  color: rgba(0, 0, 0, 0.7)
}
#icon{
  border-radius: 30px;
  background-color: red;
  width: 50px;
  height: 50px;
  position: fixed;
  bottom: 60px;
  text-align: center;
  line-height: 50px;
  left: 80%;
}
.icon-gouwuche{
  font-size: 28px;
  color: white;
}